<article class="music-album card">
  <div class="album-main">
      
    {# cover #}
    <div class="album-cover">
      <a href="/music/image/{{ album.image }}">
        <img src="/music/image/{{ album.image }}" alt="{{ album.title }}">
      </a>
    </div>

    <div class="album-info">
      <div class="album-title info-list">

        {# title-link, date, country #}
        {% if album.link %}
          {% set link = album.link %}
        {% elif album.discogs_master_id %}
          {% set link = "https://www.discogs.com/master/" ~ album.discogs_master_id %}
        {% elif album.discogs_id %}
          {% set link = "https://www.discogs.com/release/" ~ album.discogs_id %}
        {% endif %}
        {% if link %}
          <a href="{{ link }}" class="bare-link"><h2>{{ album.title }}</h2></a>
        {% else %}
          <h2>{{ album.title }}</h2>
        {% endif %}

        <time datetime="{{ album.date | date('DATETIME') }}">{{ album.date | date('yyyy') }}</time>
        {% if album.country %}
          <span class="album-country small">{{ album.country }}</span>
        {% endif %}
      </div>

      {# artists #}
      <div class="album-artists">
        {% for artist in album.artists %}
          <span class="artist">{{ artist }}</span>
        {% endfor %}
      </div>

      {# details #}
      <div class="album-detail">

        {% if album.label %}
          <span class="info-key">Label</span>
          <span class="info-list album-label">{{ album.label }}</span>
        {% endif %}

        {% if album.genre %}
          <span class="info-key">Genre</span>
          <div class="info-list">
            {% for genre in album.genre %}
              <a href="/music/tag/#genre-{{ genre | slug }}" class="album-genre">{{ genre }}</a>
            {% endfor %}
          </div>
        {% endif %}

        {% if album.styles %}
          <span class="info-key">Style</span>
          <div class="info-list">
            {% for style in album.styles %}
              <a href="/music/tag/#style-{{ style | slug }}" class="album-style">{{ style }}</a>
            {% endfor %}
          </div>
        {% endif %}

      </div>

      {# video #}
      {% if album.video %}
        <a href="{{ album.video }}" class="album-video-link small">Youtube</a>
      {% endif %}

    </div>
  </div>

  {# note #}
  {% if album.content %}
    <div class="album-note card-note text-grid-container">
      <div class="text-grid">{{ album.content | md | cjk | safe }}</div>
    </div>
  {% endif %}
</article>
