<article class="note-card card" {% if note.basename in site.featuredNotes %}data-featured{% endif %}>
  <a href="{{ note.url }}" class="bare-link">
    {% if note.title %}
      <h1>{{ note.title }}</h1>
    {% else %}
      <span>ðŸ’­</span>
    {% endif %}
  </a>

  <div class="info-list">
    <time datetime="{{ note.date | date('DATETIME') }}">
      {{ note.date | date('yyyy-MM-dd') }}
    </time>

    {% for tag in note.tags %}
      {% set page = search.page("type=tag tag='" + tag + "'") %}
      {% if page %}
        <a href="/note/tag/#{{ tag | slug }}" class="tag">{{ tag }}</a>
      {% endif %}
    {% endfor %}
  </div>

  <div class="card-note text-grid-container">
    <div class="note-digest text-grid">{{ note.digest | md | cjk | safe }}</div>
  </div>
</article>
