<!doctype html>

<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or site.title }}</title>
    <meta name="description" content="{{ description or site.description }}">
    <link rel="stylesheet" href="/style/index.css">
    <link rel="stylesheet" href="/style/reset.css">
    <link rel="stylesheet" href="/style/note.css">
    <link rel="stylesheet" href="/style/log.css">
    <link rel="stylesheet" href="/style/photo.css">
    <link rel="stylesheet" href="/style/music.css">
    <link rel="stylesheet" href="/style/clip.css">
    <link rel="stylesheet" href="/style/track.css">
    <link rel="alternate" href="/feed.xml" type="application/atom+xml" title="{{ site.title }}">
    <link rel="alternate" href="/feed.json" type="application/json" title="{{ site.title }}">
  </head>
  <body>
    <header>
      <a class="bare-link" href="/"><h1>{{ site.title }}</h1></a>
      <small>{{ site.description }}</small>
    </header>

    <nav class="nav-links">
      <ul>
        {% for url_, name in site.navLinks %}
          <li><a href="{{ url_ }}" class="bare-link" {% if url == url_ %}aria-current="page"{% endif %}>{{ name }}</a></li>
        {% endfor %}
      </ul>
    </nav>

    <main class="{{ bodyClass }}">
      {{ content | safe }}
    </main>

    <footer>
      <small>&copy; cobalt</small>
    </footer>

    <!-- Current page: {{ url }} -->
  </body>
</html>
