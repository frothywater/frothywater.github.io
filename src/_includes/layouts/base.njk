<!doctype html>

<html lang="zh">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title + " - " + site.title if title else site.title }}</title>
    <meta name="description" content="{{ description or site.description }}">
    <meta name="author" content="{{ author or site.author.name }}">
    <link rel="stylesheet" href="/style/reset.css">
    <link rel="stylesheet" href="/style/index.css">
    <link rel="shortcut icon" href="/asset/favicon.ico">
    <link rel="icon" type="image/png" href="/asset/favicon-192x192.png" sizes="192x192">
    <link rel="apple-touch-icon" sizes="180x180" href="/asset/apple-touch-icon.png">
    <link rel="alternate" href="/feed.xml" type="application/atom+xml" title="{{ site.title }}">
  </head>
  <body>
    <header>
      <a class="bare-link" href="/"><h1>{{ site.title }}</h1></a>
      <small>{{ site.description }}</small>
    </header>

    <nav class="nav-links">
      <ul>
        {% for url_, name in site.navLinks %}
          <li><a href="{{ url_ }}" class="bare-link" {% if (url == url_) or (url_ != "/" and url.startsWith(url_)) %}aria-current="page"{% endif %}>{{ name }}</a></li>
        {% endfor %}
      </ul>
    </nav>

    <main class="{{ bodyClass }}">
      {{ content | safe }}
    </main>

    <footer>
      <small>&copy; cobalt</small>
    </footer>

    <!-- Current page: {{ url }} -->
  </body>
</html>
